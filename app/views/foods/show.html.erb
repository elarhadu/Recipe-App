<div class="container mb-3 p-2">


<h2 class="text-center"><%= @food.name%></h2>

<table class="table table-striped table-bordered">

<thead>
    <tr class="text-center">
      <th scope="col">Name</th>
      <th scope="col">Measurement Unit</th>
      <th scope="col">Price</th>
      <th scope="col">Quantity</th>
    </tr>
    </thead>

<tbody class="text-center">
 
  <td><%=@food.name %></td>
  <td><%=@food.measurement_unit %></td>
  <td><%="$#{@food.price}" %></td>
  <td><%=@food.quantity %></td>
</tr>
 

</tbody>


</table>

<div class="d-flex align-items-center flex-column p-2">
  <%= link_to "Edit this food", edit_food_path(@food) %> 
  <%= link_to "Back to foods", foods_path %>
  <%= button_to "Destroy this food", @food, method: :delete %>
</div>

</div>